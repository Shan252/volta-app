<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/expenseexplorerlogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinanceManagementClient"
        tools:targetApi="31">
        <activity
            android:name=".UpdatePaymentActivity"
            android:exported="false" />
        <activity
            android:name=".DeletePaymentActivity"
            android:exported="false" />
        <activity
            android:name=".ViewPaymentActivity"
            android:exported="false" />
        <activity
            android:name=".InsertPaymentActivity"
            android:exported="false" />
        <activity
            android:name=".paymentActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>